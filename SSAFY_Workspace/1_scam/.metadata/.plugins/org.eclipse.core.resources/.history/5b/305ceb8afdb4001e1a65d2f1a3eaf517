
public class Person {
	static int count = 0;
	String name = "김싸피";
	int age = 1;

	
	public Person(String name, int age) {
		this.name = name;
		this.age = age;
		this.count++;
		System.out.printf("당신은 %d번째 사람입니다", count);
	}
	public Person(String name) {
		this(name, 1);
	}
	public Person(int age) {
		this("김싸피", age);
	}
	public Person() {
		this("김싸피", 1);
	}
	public void getInfo() {
		System.out.printf("이름 : %s, 나이 : %d");
	}
}
