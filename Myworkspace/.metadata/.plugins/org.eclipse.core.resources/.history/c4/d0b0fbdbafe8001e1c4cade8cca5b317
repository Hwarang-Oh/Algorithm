package com.ssafy.service;

import com.ssafy.dao.DeptDao;
import com.ssafy.dao.DeptDaoImpl;
import com.ssafy.dto.Dept;

public class DeptServiceImpl implements DeptService {
	
	DeptDao deptDao = new DeptDaoImpl();
	
	@Override
	public boolean registerDept(Dept dept) throws Exception {
		if (deptDao.selectDept(dept.getDeptno()) == null) return deptDao.insertDept(dept) > 0;
		return false;
	}

	@Override
	public boolean modifyDept(Dept dept) throws Exception {
		return deptDao.updateDept(dept) > 0;
	}

	@Override
	public boolean removeDept(int detpno) throws Exception {
		// TODO Auto-gene rated method stub
		return false;
	}

	@Override
	public boolean getDept(Dept dept) throws Exception {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean getDepts() throws Exception {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean getDepts(Dept dept) throws Exception {
		// TODO Auto-generated method stub
		return false;
	}

}
